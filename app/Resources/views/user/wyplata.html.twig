{% extends 'base/base.html.twig' %}

{% block menu %}
    <div class="container">
        <div class="row">
            <div class="panel panel-primary" style="text-align: center">
                <div class="panel-heading">
                    <i class="fa fa-user-refresh" aria-hidden="true"> index <- Confnij</i>
                    <i class="fa fa-chevron-circle-down" aria-hidden="true"> Wypłaty z konta</i>
                </div>
                <div class="panel-body">
                    <a href="../user" class="btn btn-info buttonIndex" role="button">Przejdz</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block main %}

    <div class="container">

        <div class="row">
            <div class="col-sm-6" style="text-align: center">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th style="text-align: center">Kwota</th>
                        <th style="text-align: center">Data Dodania</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in user_remove %}
                        <tr style="text-align: center">
                            <td>{{ item.price | e }}</td>
                            <td>{{ item.createData|date("m/d/Y") }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="col-sm-6" style="text-align: center">
                {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

                {{ form_start(form, {method: 'POST', action: path('user_remove')}) }}

                {{ form_widget(form) }}

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default">Dokonaj wypłaty</button>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>

    </div>

    <br>
    <br/>
    <br/>


{% endblock %}